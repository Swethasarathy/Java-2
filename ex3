import java.util.Scanner;
public class Main 
{
        public static void main(String[] Strings) 
        {
            Scanner input = new Scanner(System.in);
            System.out.print("Input an integer between 0 and 1000: ");
            int n = input.nextInt();
            int one = n % 10;
            int rem = n / 10;
            int two = rem % 10;
            rem = rem / 10;
            int three = rem % 10;
            int s = three + two + one;
            System.out.println("The sum of all digits in " + n + " is " + s);
    }
}
